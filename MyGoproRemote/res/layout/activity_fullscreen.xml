<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="428dp"
    android:layout_height="240dp"
    android:background="@drawable/background1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.mygoproremote.FullscreenActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="0.67"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/image_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#999999"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/status_ligne1"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="#999999"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/status_ligne2"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#999999"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_ligne3"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#999999"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center" >

                <TextView
                    android:id="@+id/status_ligne4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="1dp"
                    android:background="#999999"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_battery"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:layout_marginTop="1dp"
                    android:adjustViewBounds="false"
                    android:background="#999999"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:padding="2dp"
                    android:scaleType="fitEnd" />

                <ImageView
                    android:id="@+id/Image_wifi"
                    android:layout_width="36dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:layout_marginTop="1dp"
                    android:adjustViewBounds="false"
                    android:background="#999999"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:padding="2dp" />

            </LinearLayout>

        </LinearLayout>
<!-- 
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="1dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="#ffffff" />
-->

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center"
            android:layout_weight="0.02"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Record"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bouton_record"
                android:clickable="false"
                android:focusable="false" />

            <Button
                android:id="@+id/Mode"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bouton_mode"
                android:focusable="false" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="180dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="#00ff00" />

            <Button
                android:id="@+id/Preview"
                android:layout_width="180dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:background="@drawable/bouton_preview"
                android:clickable="false"
                android:focusable="false"
                android:longClickable="false" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>