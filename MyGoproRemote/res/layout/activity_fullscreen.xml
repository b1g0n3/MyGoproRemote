<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="428dp"
    android:layout_height="240dp"
    android:background="@drawable/background1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.mygoproremote.FullscreenActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:gravity="left" >

                <ImageView
                    android:id="@+id/image_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/status_ligne1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#999999"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_balence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="#999999"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/image_expo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="#999999"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <TextView
                android:id="@+id/status_ligne2"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#999999"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_ligne3"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#999999"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/trait"
                android:layout_width="180dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:gravity="center" >

                <TextView
                    android:id="@+id/status_ligne4"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="1dp"
                    android:background="#999999"
                    android:text="2 H 44"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_battery"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    android:background="#999999"
                    android:padding="2dp"
                    android:src="@drawable/iconepower2" />

                <ImageView
                    android:id="@+id/Image_wifi"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="1dp"
                    android:adjustViewBounds="false"
                    android:background="#999999"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:padding="2dp"
                    android:src="@drawable/iconwifi1" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingTop="20dp" >
            
            <ImageView
                android:id="@+id/blue"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/led_blue_off" />

            <ImageView
                android:id="@+id/red"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/led_red_off" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Record"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/bouton_record"
                android:clickable="true"
                android:longClickable="false" />

            <Button
                android:id="@+id/Mode"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/bouton_mode"
                android:clickable="true" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="160dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="#00ff00" />

            <Button
                android:id="@+id/Preview"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/bouton_preview"
                android:clickable="true"
                android:longClickable="false" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>